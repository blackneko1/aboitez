<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/edit_monday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Monday Sales" />
                <EditText
                    android:id="@+id/edit_tuesday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Tuesday Sales" />
                <EditText
                    android:id="@+id/edit_wednesday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Wednesday Sales" />
                <EditText
                    android:id="@+id/edit_thursday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Thursday Sales" />
                <EditText
                    android:id="@+id/edit_friday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Friday Sales" />
                <EditText
                    android:id="@+id/edit_saturday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Saturday Sales" />

                <EditText
                    android:id="@+id/edit_sunday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Sunday Sales" />
            </LinearLayout>
    </ScrollView>




</LinearLayout>